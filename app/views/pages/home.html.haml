   document.addEventListener("touchstart", function(){}, true);

      if(window.devicePixelRatio >= 1.2) {
        var retinas = document.getElementsByTagName('img');
        for(var i=0;i < retinas.length;i++){
          var src = retinas[i].src;
          retinas[i].src = src.substr(0, src.lastIndexOf(".")) + "@2x" + src.substr(src.lastIndexOf("."));
        }
      }

      function scroller(num){
         var st = document.body.scrollTop,
             c = 0;
          for(var i=st;i<num;i++){
             setTimeout('window.scrollTo(0,'+ i +')',c);
             c++;
             i = i + 1;
          }
      }

      document.getElementById('learnmore').onclick = function(e){
          scroller(document.getElementById('hero').offsetHeight - 70);
          e.preventDefault();
      };

      document.getElementById('view_pricing').onclick = function(e){
         var offtop = document.getElementById('pricing').offsetTop;
         if(offtop){
            scroller(offtop - 70);
            e.preventDefault();
         }
      };

      var hero_hi = new Image();
      hero_hi.src = 'https://plasso.co/images/hero-hi.jpg';
      hero_hi.onload = function(){
        document.getElementById('hero_bg').style.backgroundImage = 'url(https://plasso.co/images/hero-hi.jpg)';
      };

      if(document.location.toString().indexOf('?features') != -1){
         window.scrollTo(0,(document.getElementById('hero').offsetHeight - 72));
      }

      if(typeof window.orientation == 'undefined'){
         var hero_elem = document.getElementById('hero_bg');
         window.onscroll = function(){
         var y = (window.pageYOffset !== undefined) ? window.pageYOffset : (document.documentElement || document.body.parentNode || document.body).scrollTop;
         if(y < 800){
            var translate = 'translate3d(0,'+(y * 0.4) +'px,0)';
            hero_elem.style.WebkitTransform = translate;
            hero_elem.style.MozTransform = translate;
            hero_elem.style.msTransform = translate;
            hero_elem.style.OTransform = translate;
            hero_elem.style.transform = translate;
         }
        };
       }
