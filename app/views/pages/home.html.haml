%iframe{:id=>"logoutframe", :src=>"https://accounts.google.com/logout",:style=>"display: none"}
%header
   %div.header-content
      %div.header-content-inner
         %h1 Your Favorite Source of Free Bootstrap Themes
         %hr
         %p Start Bootstrap can help you build better websites using the Bootstrap CSS framework! Just download your template and start going, no strings attached!
         %a{:href=>"#about",:class=>"btn btn-primary btn-xl page-scroll"} Find Out More
%section.bg-primary{:id=>"about"}
   %div.container
      %div.row
         %div{:class=>"col-lg-8 col-lg-offset-2 text-center"}
            %h2.section-heading We've got what you need!
            %hr.light
            %p.text-faded Start Bootstrap has everything you need to get your new website up and running in no time! All of the templates and themes on Start Bootstrap are open source, free to download, and easy to use. No strings attached!
            %a{:href=>"#login",:class=>"page-scroll btn btn-default btn-xl sr-button"} Get Started!
%section{:id=>"services", :style=>'background-color: #fff;'}
   %div.container
      %div.row
         %div{:class=>"col-lg-12 text-center"}
            %h2.section-heading At Your Service
            %hr.primary
   %div.container
      %div.row
         %div{:class=>"col-lg-3 col-md-6 text-center"}
            %div.service-box
               %i{:class=>"fa fa-4x fa-diamond text-primary sr-icons"}
               %h3 Sturdy Templates
               %p.text-muted Our templates are updated regularly so they don't break
         %div{:class=>"col-lg-3 col-md-6 text-center"}
            %div.service-box
               %i{:class=>"fa fa-4x fa-paper-plane text-primary sr-icons"}
               %h3 Ready to Ship
               %p.text-muted You can use this theme as is, or you can make changes!
         %div{:class=>"col-lg-3 col-md-6 text-center"}
            %div.service-box
               %i{:class=>"fa fa-4x fa-newspaper-o text-primary sr-icons"}
               %h3 Up to Date
               %p.text-muted We update dependencies to keep things fresh
         %div{:class=>"col-lg-3 col-md-6 text-center"}
            %div.service-box
               %i{:class=>"fa fa-4x fa-heart text-primary sr-icons"}
               %h3 Made with Love
               %p.text-muted You have to make your websites with love these days!
%section.bg-primary{:id=>"login"}
   %div{:class=>"container"}
      %div{:class=>"row row-centered"}
         -# %div{:class=>"col-sm-6"}
         -#    =image_tag "Logo4_blue_front.gif"
         -#   %p{:style=>"padding:10px;"}
         %div{:class=>"col-sm-offset-4 col-sm-4"}
            =form_for(resource, as: resource_name, url: user_session_path) do |f|
               %fieldset.form-group
                  =f.label t('.email')
                  =f.email_field :email, autofocus: true, :class=>"form-control"
               %fieldset.form-group
                  = f.label t('.password')
                  = f.password_field :password, autocomplete: "off", :class=>"form-control"
               -if devise_mapping.rememberable?
                  %fieldset.form-group
                     = f.check_box :remember_me
                     = f.label t('.remember_me')
               %div.form-group
                  = f.submit t('.login'), :class=>"btn btn-default"
                  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
                     = link_to t('.forgot_password'), new_password_path(resource_name), :id=>"forgot_password"
            %hr
            =link_to  user_linkedin_omniauth_authorize_path, id: "sign_in", :class => 'btn btn-block btn-social btn-linkedin' do
               %span{:class=>"fa fa-linkedin"}
               =t('.sign_in_linkedin')
            =link_to user_google_oauth2_omniauth_authorize_path , id: "sign_in", :class => 'btn btn-block btn-social btn-google' do
               %span{:id=>"googlebutton", :class=>"fa fa-google-plus"}
               =t('.sign_in_google')
            %p{:style=>"padding:10px;"}
