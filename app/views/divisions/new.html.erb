<h1>New Division</h1>
<%= render 'shared/error_messages' %>
<%= @company.name %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@company, @division]) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :share %>
      <%= f.check_box :share %>

      <%= f.submit "Save changes" %>
    <% end %>

    <div class="gravatar_edit">
      <%= link_to 'Back', companies_path(params[:company_id]), :method => :show %>
    </div>
  </div>
</div>
