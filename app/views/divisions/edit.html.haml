%h1 Update Division

%div.row
   %div.col-md-6.col-md-offset-3
      = form_for([@company, @division]) do |f|
         = f.label :name
         = f.text_field :name, class: 'form-control'
         %br

         = f.label :share
         = f.check_box :share
         %br

         = f.submit "Save changes", class: "btn btn-primary"
         %br

   %div.gravatar_edit
      = link_to 'Back', company_path(@company), :action => :show 
