%div{:class=>"container"}
   %div
      %div
         %ol{:class=>"breadcrumb"}
            %li
               = link_to company_user_path(current_user.company_id ,current_user.id) do
                  =t('.home')
            %li
               = link_to companies_path do
                  =t('.companies')
            %li New
- quantity = 1
%div{:id=>"main",:class=>"container"}
   %div{:class=>"img-rounded",:style=>"background: white;padding-bottom:10px"}
      = render 'shared/error_messages'
      = form_for(@company , :html => {:class => "form-horizontal"}) do |f|
         %div.page-header
            %div.container
               %div.row-fluid
                  %h2 #{t('.new_company')}
         %div{:class=>"form-group"}
            = f.label t('.name'), :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.text_field :name, :class=>"form-control", :required => true
         %div{:class=>"form-group"}
            = f.label t('.portal'), :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.text_field :portal, :class=>"form-control", :required => true
         %div{:class=>"form-group"}
            = f.label t('.licenses'), :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.number_field :licenses, :min => 1, :step => 1, placeholder:"1", :class=>"form-control",:value => quantity, :required => true
         %div{:class=>"form-group"}
            %div{:class=>"col-sm-5 col-sm-offset-2"}
               = f.submit t('.save'), :class=>"btn btn-default"
               = link_to "<button class='btn btn-default'>#{t('.cancel')}</button>".html_safe, companies_path
