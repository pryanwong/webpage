%div.form-style-10
   %h1 New Company
   = form_for(@company) do |f|
      %div.section
         %div.inner-wrap
            %div.col-md-6.col-md-offset-3
               = f.label :name
               = f.text_field :name
               %br

               = f.label :licenses
               = f.number_field :licenses, :min => 1, :step => 1, class: 'form-control'
               %br

               = f.submit "Save"
               = button_tag "Cancel", :type => 'submit', :class => 'button', :value=>"Cancel"
               %br
