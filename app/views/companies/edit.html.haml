%div{:class=>"container"}
   %div
      %div
         %ol{:class=>"breadcrumb"}
            %li
               = link_to company_user_path(current_user.company_id ,current_user.id) do
                  Home
            %li
               = link_to company_path(current_user.company_id ) do
                  Company
            %li Edit
%div{:class=>"container"}
   %div{:class=>"img-rounded",:style=>"background: white;padding-bottom:10px"}
      = render 'shared/error_messages'
      = form_for(@company , :html => {:class => "form-horizontal"}) do |f|
         %div.page-header
            %div.container
               %div.row-fluid
                  %h2 Edit Company Details
         %div{:class=>"form-group"}
            = f.label :name, :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.text_field :name, :class=>"form-control", :required => true
         %div{:class=>"form-group"}
            = f.label :portal, :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.text_field :portal, :class=>"form-control", :required => true
         %div{:class=>"form-group"}
            = f.label :licenses, :class=>"control-label col-sm-2"
            %div{:class=>"control-label col-sm-5"}
               = f.number_field :licenses, :min => 1, :step => 1, placeholder:"1", :class=>"form-control", :required => true
         %div{:class=>"form-group"}
            %div{:class=>"col-sm-5 col-sm-offset-2"}
               = f.submit "Save", :class=>"btn btn-default"
               = link_to "<button class='btn btn-default'>Cancel</button>".html_safe, company_path(@company)
