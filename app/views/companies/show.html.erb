<h1>Company</h1>
<%= render 'shared/error_messages' %>
<table>
  <tr>
    <th>Name</th>
    <th>Licenses</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <td><%= @company.name %></td>
    <td><%= @company.licenses %></td>
    <td><% if can? :read, @company %><%= link_to "Show", @company %><% end %></td>
    <td><% if can? :update, @company %><%= link_to "Edit", edit_company_path(@company) %><% end %></td>
    <td><% if can? :destroy, @company %><%= link_to "Remove", @company, method: :delete, data: { confirm: "Are you sure?" } %><% end %></td>
  </tr>
</table>

<br>

<%= link_to "Companies List", companies_path %>

<br>

<table>
  <tr>
    <th>Division</th>
    <th>Share</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @company.divisions.each do |division| %>
  <tr>
    <td><%= division.name %></td>
    <td><%= division.share %></td>
    <td><%= link_to "Edit", edit_company_division_path(@company, division) %></td>
    <td><%= link_to "Remove", company_division_path(@company, division), method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to "New Division", new_company_division_path(@company) %>

<br>

<table>
  <tr>
    <th>User</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @company.users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.isadmin %></td>
    <td><% if can? :update, user %><%= link_to "Edit", edit_company_user_path(@company, user) %><% end %></td>
    <td><% if can? :destroy, user %><%= link_to "Remove", company_user_path(@company, user), method: :delete, data: { confirm: "Are you sure?" } %><% end %></td>
  </tr>
<% end %>
</table>

<br>

<% if can? :create, current_user %><%= link_to "New User", new_company_user_path(@company) %><% end %>

<br>
