%h1 New User
= render 'shared/error_messages'
= @company.name
%div.row
   %div.col-md-6.col-md-offset-3
      = form_for([@company, @user]) do |f|

         = f.label :email
         = f.email_field :email, :required => true
         %br

         = f.label :isadmin
         = f.check_box :isadmin
         %br

         = f.submit "Save changes"
         %br

      %div.gravatar_edit
         = link_to 'Back', company_path(@company), :action => :show
