%div{:class=>"container"}
   %div
      %div
         %ol{:class=>"breadcrumb"}
            %li
               = link_to company_user_path(current_user.company_id ,current_user.id) do
                  =t('.home')
            %li #{t('.switch_user')}
%div{:id=>"main", :class=>"container"}
   %div{:class=>"row row-content-no-padding"}
      %div
         %table{:class=>"table table-bordered table-hover"}
            %thead
               %tr
                  %td #{t('.users')}
                  %td{:class=>"hidden-sm hidden-xs", :colspan=>'4'}
               %tr
                  %th= sortable "users.email", "email"
                  %th #{t('.switch')}
                  %th{:colspan=>"3"}
            %tbody
               -@users.each do |user|
                  %tr
                     %td= user.email
                     %td
                        =link_to company_user_switchuser_path(user.company_id ,user.id) do
                           %i{:class=>"fa fa-user"}
                     %td{:colspan=>"3"}
         =will_paginate @users
