%div{:class=>"container"}
   %h1 New Sketch
   = render 'shared/error_messages'
   = form_for(@drawing, url: newdrawingproc_company_user_path(@company.id, @user.id)) do |f|
      %div.section
         %div{:class=>"form-group"}
            %div{:class=>"control-label col-sm-2"}
               = f.label :customer
            %div{:class=>"control-label col-sm-10"}
               = f.text_field :customer
         %div{:class=>"form-group"}
            %div{:class=>"control-label col-sm-2"}
               = f.label :opportunity
            %div{:class=>"control-label col-sm-10"}
               = f.text_field :opportunity
         %div{:class=>"form-group"}
            %div{:class=>"control-label col-sm-2"}
               = f.label :description
            %div{:class=>"control-label col-sm-10"}
               = f.text_field :description
         %div{:class=>"form-group"}
               = f.submit "Save"
               = button_tag "Cancel", :type => 'submit', :class => 'button', :value=>"Cancel"
