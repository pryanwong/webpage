%div.form-style-10
   %h1 Update User
   = form_for([@company, @user]) do |f|
      %div.section
         %div.inner-wrap
            %div.col-md-6.col-md-offset-3
               = f.label :email
               = f.email_field :email, :required => true
               %br

               = f.label :isadmin
               = f.check_box :isadmin
               %br

               = f.submit "Save"
               = button_tag "Cancel", :type => 'submit', :class => 'button', :value=>"Cancel"
               %br
