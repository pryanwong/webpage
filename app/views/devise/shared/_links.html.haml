
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
   = link_to t('.forgot_password'), new_password_path(resource_name), style: "color:black"
   %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
   = link_to t('.no_confirm_instructions'), new_user_confirmation_path(resource_name), style: "color:black"
   %br


- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
   = link_to t('.no_unlock_instructions'), new_unlock_path(resource_name)
   %br
=link_to  root_path, id: "sign_in", :class => 'btn btn-block btn-social btn-reddit', style: "color:black" do
   %span{:class=>"fa fa-circle-o"}
   =t('.sign_in_optecture')
=link_to  user_linkedin_omniauth_authorize_path, id: "sign_in", :class => 'btn btn-block btn-social btn-linkedin' do
   %span{:class=>"fa fa-linkedin"}
   =t('.sign_in_linkedin')
=link_to user_google_oauth2_omniauth_authorize_path , id: "sign_in", :class => 'btn btn-block btn-social btn-google' do
   %span{:id=>"googlebutton", :class=>"fa fa-google-plus"}
   =t('.sign_in_google')
