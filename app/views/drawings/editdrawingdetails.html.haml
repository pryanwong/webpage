%div.form-style-10
   %h1 Edit Sketch
   = render 'shared/error_messages'
   = form_for(@drawing, url: updatedrawingdetails_company_user_drawing_path(@company.id, @user.id, @drawing.id), :method => :POST) do |f|
      %div.section
         %div.inner-wrap
            %div.col-md-6.col-md-offset-3
               = f.label :customer
               = f.text_field :customer, :required => true
               %br

               = f.label :opportunity
               = f.text_field :opportunity, :required => true
               %br

               = f.label :description
               = f.text_field :description
               %br

               = f.submit "Save"
               %br
